<h1 class = "titre-show fs-3 fw-1 text-center" >  Welcome to your offers </h1>
<div class="show">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card-bunker">

 <li class="list-group-item">
   <li><%= @bunker.title %></li>
   <% if @bunker.photo.attached? %>
      <%= cl_image_tag @bunker.photo.key, height: 300, width: 400, crop: :fill %>

   <% end %>
   <li><%= @bunker.description %></li>
    <li><%= @bunker.prix %></li>
 </li>
  <% if current_user == @bunker.user  %>

  <%= link_to "Delete",
    bunker_path(@bunker),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "edit your offer", edit_bunker_path(@bunker.id) %>
  <%= link_to "Back to the offers",
    bunkers_path(@bunker),
    data: {turbo_method: :bunkers}%>

  <% end %>
  </div>
    </div>
  </div>
</div>
