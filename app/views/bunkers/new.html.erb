<div class="container">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">
          <h2 class = "text-center fw-1 fs-1 m-5">  Create Your Bunker's offer !</h2>

          <%= simple_form_for(@bunker) do |f| %>
              <div class="form-inputs">

                <%= f.input :title,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "title" } %>

                <%= f.input :photo,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "photo" } %>

                  <%= f.input :description,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "description" } %>

                  <%= f.input :prix,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "prix" } %>

                    <div class="form-actions text-center">
                      <%= f.submit "Submit offer ", class: "btn btn-dark btn-lg btn-block mt-4 custom-button" %>
                    </div>
                    <br>
                        <%= link_to "<< BACK TO HOME", bunker_path%>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
