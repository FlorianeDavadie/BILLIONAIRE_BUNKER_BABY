<h2>Bunker's offer !</h2>
<h3> Add title to you offer <%= @bunker.title %></h3>
<h3> Add description to you offer <%= @bunker.description %></h3>
<h3> propose a price to you offer <%= @bunker.prix %></h3>


<%= simple_form_for[@user, @bunker] do |f| %>
  <div class="form-inputs">
    <%= f.input :title,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "title" } %>

     <%= f.input :description,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "description" } %>

     <%= f.input :prix,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "prix" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "confirm your publication offer's" %>
  </div>
<% end %>

